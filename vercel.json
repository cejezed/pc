{
  "version": 2,
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "framework": "vite",
  "functions": { "api/**/*.{ts,js}": { "runtime": "nodejs20.x" } },
  "routes": [
    { "src": "^/api/.*", "dest": "/api/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "apps/client/index.html" }
  ]
}
